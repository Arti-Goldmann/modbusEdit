{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}",
                "-DCMAKE_PREFIX_PATH=/mnt/c/Qt/6.7.2/gcc_64"
            ],
            "group": "build",
            "detail": "Configure CMake project",
            "problemMatcher": []
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the project",
            "dependsOn": "cmake-configure",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake-clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "clean"
            ],
            "group": "build",
            "detail": "Clean build artifacts"
        },
        {
            "label": "run-app",
            "type": "shell",
            "command": "${workspaceFolder}/build/modbusEdit",
            "group": "test",
            "detail": "Run the application",
            "dependsOn": "cmake-build"
        }
    ]
}